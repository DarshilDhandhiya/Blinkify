{
    "manifest_version": 3,
    "name": "URL Shortener",
    "version": "1.2",
    "description": "Shorten URLs quickly and copy to clipboard.",
    "permissions": [
      "clipboardRead",
      "clipboardWrite",
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  